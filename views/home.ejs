<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>BlogBuzz - List your blogs here</title>
    <link rel="icon" type="png" href="https://media.istockphoto.com/id/1200899039/photo/one-like-social-media-notification-with-thumb-up-icon.webp?a=1&b=1&s=612x612&w=0&k=20&c=oAfH1-YEsng29b5S9OTs_WF4VRumWISXZDSS0uzhzio=">
</head>
<body>
    <%- include("./partials/nav") %>

    <h1 class="text-center mt-4">All Blogs</h1>

    <div class="container mt-4">
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4 d-flex justify-content-center">
                    <div class="card" style="width: 21rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 300px; object-fit: cover;" alt="...">
                        <div class="card-body text-center">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include("./partials/scripts") %>
</body>
</html>

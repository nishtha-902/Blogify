<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Home Page</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <h1 class="text-center mt-4">Your Blogs</h1>

    <div class="container mt-4">
        <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card col" style="width: 18rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" style="height: 300px;" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <a href="/blog/<%= blog._id %>" class="btn btn-primary" style="margin-left: 90px;">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include("./partials/scripts") %>
</body>
</html>